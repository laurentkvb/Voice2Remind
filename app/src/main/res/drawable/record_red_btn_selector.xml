<item android:state_selected="true" android:drawable="@drawable/blue_gradient_background"/>
<item android:state_focused="true" android:drawable="@drawable/blue_gradient_background"/>
<!--<item android:state_first="true" android:drawable="@drawable/blue_gradient_background"/>-->
<item android:state_accelerated="true" android:drawable="@drawable/blue_gradient_background"/>
<!--<item android:state_single="true" android:drawable="@drawable/blue_gradient_background"/>-->
<!--<item android:state_drag_hovered="true" android:drawable="@drawable/blue_gradient_background"/>-->
<!--<item android:state_window_focused="true" android:drawable="@drawable/blue_gradient_background"/>-->

